<div class="panel panel-primary">
  <div class="panel-heading">Welcome <%= current_user.email %> </div>
</div>
  <% if current_user.admin? %>
    <% @users.each do |user| %>
    <p><%= user.email %></p>
    <p> Admin: <%= user.admin %>
    <%= button_to "Make Student", make_student_path(user.id), method: :put %>
    <%= button_to "Make Admin", make_admin_path(user.id), method: :put %>
  <% end %>
  <hr>
    <p><%= 'Users:' %> <%= User.count %> registered</p>
    <% else %>
    <p><%= link_to current_user.email, user_path(current_user.id) %></p>
<% end %>
<%= link_to "Back", root_path, class: "btn btn-default" %>
