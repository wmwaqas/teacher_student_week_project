  <div class="panel-heading">Welcome</div>
</div>
  <% if current_user.admin? %>
    <% @teams.each do |team| %>
    <p><%= link_to team.name, team_path(team.id) %></p>
    <p><% team.users.each do |user| %></p>
    <%= user.email %>
  <% end %>
  <% end %>
  <hr>
  <%= button_to "Generate Teams", teams_path, method: :post %>
    <p><%= 'Teams:' %> <%= Team.count %> registered</p>
    <% else %>
    <p><%= current_user.team.name %></p>
    <p><% current_user.team.users.each do |user| %></p>
    <%= user.email %>
    <% end %>
<% end %>
